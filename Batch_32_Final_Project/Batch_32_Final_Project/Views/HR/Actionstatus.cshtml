@model Batch_32_Final_Project.Models.Statusofapplication

@{
    ViewBag.Title = "Actionstatus";
    Layout = "~/Views/Shared/HRLayout.cshtml";
}

<div class="table-bordered bg-light" style="width:600px; margin-left:auto;margin-right:auto;padding-left:175px;">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        {
            var aid = ViewBag.aid as int?;
            @Html.Hidden("aid", aid)
        }


        <div class="form-group">
            <label class="col-md-4"><strong>Status</strong></label>
            <select class="col-md-8" id="Status" name="Status" required>
                <option value="Pending" >Pending</option>
                <option value="Short Listed For interview" )>Short Listing For interview</option>
                <option value="Short Listed For Final interview" )>Short Listing For Final interview</option>
                <option value="Short Listed For Training" )>Short Listing For Training</option>
                <option value="Not selected">Not Selected</option>
            </select>
        </div>
        <div  class="form-group">
            <label class="col-md-4"><strong>Interview Date</strong></label>
          <input class="col-md-8" type="date" name="Interviewdate" />
            </div>
            <div  class="form-group">
            <input style="margin:20px; " type="submit" name="Update" class="btn btn-success" />
        </div>
    }
</div>
