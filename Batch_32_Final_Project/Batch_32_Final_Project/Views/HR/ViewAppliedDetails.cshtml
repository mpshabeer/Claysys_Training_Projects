@model IEnumerable<Batch_32_Final_Project.Models.Alldetailsofapplication>

@{
    ViewBag.Title = "ViewAppliedDetails";
    Layout = "~/Views/Shared/HRLayout.cshtml";
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JobTitle)
        </th> 

        <th>
            @Html.DisplayNameFor(model => model.Firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Resume)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>


        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>

    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.JobTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lastname)
        </td>
        <td>
            <a href="mailto:item.Email">@Html.DisplayFor(modelItem => item.Email)</a>
        </td>

        <td>
            <a href="data:application/pdf;base64,@item.Resume" target="_blank">View Resume</a>
        <td>
            <img src="data:image;base64,@item.Photo" alt="Image" style="width:100px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Interviewdate)
        </td>


        <td style="display:none;">@Html.ActionLink("Action", "Actionstatus", new { id = item.aid }, new { @class = "btn btn-primary" })</td>
        <td>@Html.ActionLink("Details", "Updateapplication", new { id = item.aid }, new { @class = "btn btn-success" })</td>
    </tr>
}

</table>
