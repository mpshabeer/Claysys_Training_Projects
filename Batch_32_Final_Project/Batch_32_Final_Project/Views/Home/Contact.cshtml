
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}
<link href="~/Content/CSS/ContactusSheet1.css" rel="stylesheet" />


<div class="container mt-4">
    <h2 class="text-center" style="color: rgb(1, 19, 26); font: 3em sans-serif;">Contact us</h2>
    <form class="form">
        <input type="text" class="form-control" id="name" placeholder="Name" onfocusout="validatename()" required>
        <small id="namewarn" style="color: red;"></small>

        <input id="mail" type="email" class="form-control" placeholder="Email" onfocusout="validemail()" required>
        <small id="mailwarn" style="color: red;"></small>

        <input id="phone" type="Phone" class="form-control" placeholder="Phone" pattern="[6789][0-9]{9}"
               onfocusout="validatephone()" required>
        <small id="phonewarn" style="color: red;"></small>

        <textarea class="form-control" id="adr" placeholder="Command"></textarea>
        <button class="btn btn-primary" type="submit">Contact</button>
    </form>

    <h3 class="text-center" style="color: rgb(224, 80, 36); margin-top: 30px;">Our Branches</h3>
    <div class="container" style="margin-bottom:100px;">
        <div class="row justify-content-around">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Kochi (Head Office)</h5>
                        <p class="card-text">First Floor, VJ Tower, Kochi</p>
                        <p class="card-text">Phone: +91 7594055036</p>
                        <p class="card-text"><a href="mailto:Infotechkochi@mail.com">Infotechkochi@mail.com</a></p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Tamil Nadu</h5>
                        <p class="card-text">Chennai 600029</p>
                        <p class="card-text">Phone: +919778413274</p>
                        <p class="card-text"><a href="mailto:Infotechchennai@mail.com">Infotechchennai@mail.com</a></p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Dubai</h5>
                        <p class="card-text">02-01 Mai tower, Al Nahda 1, Dubai</p>
                        <p class="card-text">Phone: +97 8210290772</p>
                        <p class="card-text"><a href="mailto:Infotechdubai@mail.com">Infotechdubai@mail.com</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


