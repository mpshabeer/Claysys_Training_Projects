
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CandidateLayout</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/CSS/CandidateStylele.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>
<body>

    <ul class="unorderdlist">



        <li class="list">@Html.ActionLink("Logout", "Logout", "Candidate", new { area = "" })</li>
        <li class="list">@Html.ActionLink("Account", "Getuserdetails", "Candidate", new { area = "" })</li>
        <li class="list">@Html.ActionLink("My applications", "Viewmyapplication", "", new { area = "" })</li>
        <li class="list">@Html.ActionLink("Career opportunities", "Viewvacancy", "Candidate", new { area = "" })</li>
        <li class="list">@Html.ActionLink("Home", "CandidateDashbord", "Candidate", new { area = "" })</li>
        @if (Session["Email"] != null && Session["rid"] != null && Session["userType"].ToString() != "HR")
        {
            <li class="list">
                <a href="#home">
                    <strong>Welcome @Session["username"].ToString()</strong>
                </a>
            </li>
        }
        else
        {
            Response.RedirectToRoute("Default", new { controller = "Home", action = "Signin" });
        }
        <li class="liof"> <img  src="~/Content/Images/logo.jpg" style="width: 40px; height: 50px; margin-left:10px;padding: 1px;" /></li>
        <li class="liof"><a href="#"><strong>INFOTECH PVT LTD</strong></a></li>
    </ul>
    @RenderBody()

<footer class="bg-black text-light text-center p-3 ">

    INFOTECH PVT LTD &copy; 2023
</footer>
</body>
</html>
